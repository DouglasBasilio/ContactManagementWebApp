@model Alfasoft.Customer

@{
    ViewData["Title"] = "Alfasoft - Customer Details";
}

<h1>Customer Details</h1>

<div>
    <h4>Name: @Model.Name</h4>
    <h4>Contact Number: @Model.ContactNumber</h4>
    <h4>Email Address: @Model.EmailAddress</h4>
</div>

<br />

<a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
<a asp-action="Delete" asp-route-id="@Model.ID">Delete</a>