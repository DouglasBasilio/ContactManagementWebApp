@model Alfasoft.LoginViewModel

@{
    ViewData["Title"] = "Alfasoft - Login";
}

<h1>Login</h1>

<form asp-action="Login" asp-controller="Account">
    <div class="form-group">
        <label>User</label>
        <input asp-for="Login" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    @{
        // Adiciona um prefixo '/' à frente do returnUrl para garantir que seja uma URL absoluta
        string returnUrl = ViewData["ReturnUrl"]?.ToString();
    }
    <input type="hidden" name="ReturnUrl" value="@returnUrl" />
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
</form>
